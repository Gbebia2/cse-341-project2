{
  "swagger": "2.0",
  "info": {
    "title": "Item API",
    "description": "API for managing items in a MongoDB database. GitHub OAuth is required for POST, PUT, and DELETE routes.",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "securityDefinitions": {
    "OAuth2": {
      "type": "oauth2",
      "flow": "accessCode",
      "authorizationUrl": "https://github.com/login/oauth/authorize",
      "tokenUrl": "https://github.com/login/oauth/access_token",
      "scopes": {}
    }
  },
  "paths": {
    "/login": {
      "get": {
        "description": "Redirects to GitHub for login",
        "responses": {
          "302": {
            "description": "Redirect to GitHub"
          }
        }
      }
    },
    "/logout": {
      "get": {
        "description": "Logs the user out",
        "responses": {
          "200": {
            "description": "Logged out"
          }
        }
      }
    },
    "/items/": {
      "get": {
        "description": "Retrieve all items",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Create a new item (requires login)",
        "security": [{ "OAuth2": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "any" },
                "description": { "example": "any" },
                "price": { "example": "any" },
                "category": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/items/{id}": {
      "get": {
        "description": "Retrieve an item by ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "description": "Update an item by ID (requires login)",
        "security": [{ "OAuth2": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "any" },
                "description": { "example": "any" },
                "price": { "example": "any" },
                "category": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete an item by ID (requires login)",
        "security": [{ "OAuth2": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/customers/": {
      "get": {
        "description": "Retrieve all customers",
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Create a new customer (requires login)",
        "security": [{ "OAuth2": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "any" },
                "age": { "example": "any" },
                "email": { "example": "any" },
                "address": { "example": "any" },
                "phone": { "example": "any" },
                "occupation": { "example": "any" },
                "itemBought": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/customers/{id}": {
      "get": {
        "description": "Retrieve a customer by ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "description": "Update a customer by ID (requires login)",
        "security": [{ "OAuth2": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "any" },
                "age": { "example": "any" },
                "email": { "example": "any" },
                "address": { "example": "any" },
                "phone": { "example": "any" },
                "occupation": { "example": "any" },
                "itemBought": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete a customer by ID (requires login)",
        "security": [{ "OAuth2": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  }
}
